<div class="container">
  <div class="row"><h2 class="px-3">All our flats (<%= @flats.count %>)</h2></div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">

        <div class="card mb-4" style="width: 20rem;">
          <img src="https://images.unsplash.com/photo-1415301918039-3a58086adf06?ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80" class="card-img-top" alt="flat photo">
          <div class="card-body">
            <h5 class="card-title text-muted"><%= flat.name %></h5>
            <h6 class="card-subtitle mb-2 font-weight-lighter"><%= flat.address %></h6>
            <p class="card-text">
              <i class="fas fa-users mr-2"></i><%= flat.number_of_guests %>
              <i class="fas fa-pound-sign mx-2"></i><%= flat.price_per_night %></p>
          </div>
          <div class="card-footer">
            <%= link_to 'More Details', flat_path(flat) %>
          </div>
        </div>



      </div>
    <% end %>
  </div>
</div>
